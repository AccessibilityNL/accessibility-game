---
layout: layouts/level-play.pug
---


// styles
style(type="text/css").
    .play-container {
        max-width: 60rem;
        padding: 1.5rem 0;
    }
    #level {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;

        width: 100%;
    }
    #level .memory-card {
        display: flex;
        align-items: center;
        justify-content: center;

        width: calc(25% - 1rem);
        height: 12rem;
        
        background-color: #21CEA0;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;

        border-radius: 0.5rem;
        border: none;

        cursor: pointer;
        transition: transform .2s;
    }
    @media (max-width: 35rem) {
        #level .memory-card { 
            width: calc(33% - 1rem);
            height: 8rem;
        }
    }
    .memory-card:hover {
        transform: scale(1.02);
    }
    .memory-card:active {
        transform: scale(0.98);
    }

    .memory-card img {
        width: 5rem;
        height: auto;

        display: none;
    }

    #title {
        text-align: center;
        margin-bottom: 1.5rem;

        font-weight: bold;
        font-size: 1.2rem;
    }
    #title span {
        display: none;
    }
    #title span.active {
        display: inline;
    }

    #in-between {
        display: none;
    }
    #in-between.active {
        display: block;
    }



.container.play-container
    h3#title
        span.active= stage_1_title
        span= stage_2_title
    // Het level
    #level

    #in-between.container.center
        p= stage_2_intro
        button.button(onclick="memory.setupSecondRound()")= stage_2_intro_button

    // De code
    script(data-src="/assets/js/level-kleurenblind.js" type="text/javascript" data-load-script)
