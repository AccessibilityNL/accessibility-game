---
layout: layouts/level-play.pug
---


// styles
style(type="text/css").
    .play-container {
        max-width: 60rem;
        padding: 1.5rem 0;
    }
    #kleurenblind {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;

        width: 100%;
    }
    #kleurenblind .memory-card {
        display: flex;
        align-items: center;
        justify-content: center;

        width: calc(25% - 1rem);
        height: 12rem;
        
        background-color: #21CEA0;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;

        border-radius: 0.5rem;
        border: none;

        cursor: pointer;
        transition: transform .2s;
    }
    @media (max-width: 35rem) {
        #kleurenblind .memory-card { 
            width: calc(33% - 1rem);
            height: 8rem;
        }
    }
    .memory-card:hover {
        transform: scale(1.02);
    }
    .memory-card:active {
        transform: scale(0.98);
    }

    .memory-card img {
        width: 5rem;
        height: auto;

        display: none;
    }

    #title {
        text-align: center;
        margin-bottom: 1.5rem;

        font-weight: bold;
        font-size: 1.2rem;
    }
    #title span {
        display: none;
    }
    #title span.active {
        display: inline;
    }

    /* Animations */

    #kleurenblind, #in-between {
        transition: all .5s;
    }
    #kleurenblind.animating-out, #in-between.animating-out  { 
        opacity: 0;
        transform: translateX(-50%);
    }
    #kleurenblind.animating-in, #in-between.animating-in  { 
        opacity: 0;
        transform: translateX(50%);
    }

    #in-between {
        display: none;
    }



.container.play-container
    h3#title
        span.active= stage_1_title
        span= stage_2_title
    // Het level
    #kleurenblind

    #in-between
        .container
            | !{content}
        .conatainer.center
            button.button(onclick="memory.setupSecondRound()")= stage_2_intro_button

    // De code
    script(data-src="/assets/js/level-kleurenblind.js" type="text/javascript" data-load-script)
